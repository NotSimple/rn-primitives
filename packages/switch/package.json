{
  "name": "@rn-primitives/switch",
  "version": "1.0.0-rc.2",
  "description": "Primitive switch",
  "license": "MIT",
  "main": "dist/switch.js",
  "module": "dist/switch.mjs",
  "types": "dist/switch.d.ts",
  "exports": {
    ".": {
      "import": "./dist/switch.mjs",
      "require": "./dist/switch.js",
      "types": "./dist/switch.d.ts",
      "default": "./dist/switch.js"
    },
    "./dist/switch": {
      "import": "./dist/switch.mjs",
      "require": "./dist/switch.js",
      "types": "./dist/switch.d.ts",
      "default": "./dist/switch.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "pub:beta": "pnpm publish --no-git-checks --access public --tag beta",
    "pub:next": "pnpm publish --no-git-checks --access public --tag next",
    "pub:release": "pnpm publish --access public"
  },
  "dependencies": {
    "@radix-ui/react-switch": "^1.0.3",
    "@rn-primitives/slot": "workspace:*",
    "@rn-primitives/types": "workspace:*"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/react": "~18.2.79",
    "react": "18.2.0",
    "react-native": "0.74.1",
    "tsup": "^8.1.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-web": "*"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-web": {
      "optional": true
    }
  }
}
